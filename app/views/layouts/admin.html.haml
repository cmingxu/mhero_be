!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Mhero"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"


  %body
    .navbar.navbar-fixed-top
      .container
        %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand(href="#") Mhero
        %ul.nav.navbar-nav.pull-right
          %li= link_to "Logout", sessions_path(:method => :delete)

    .container.main-content
      .row
        .col-lg-3.sidebar
          .sidebar-nav
            %ul.nav.nav-list
              %li= link_to "UniqUsers", admin_uniq_users_path
              %li= link_to "Users", admin_users_path
              %li= link_to "Characters", admin_characters_path
              %hr
              %li= link_to "Char Config", admin_char_confs_path
              %li= link_to "Char Upgrade Config", admin_char_upgrade_confs_path
              %li= link_to "Prop Config", admin_prop_confs_path
              %li= link_to "Prop Upgrade Config", admin_prop_upgrade_confs_path
              %li= link_to "Skill Config", admin_skill_confs_path
              %hr
              %li= link_to "Moderators", admin_moderators_path
        .col-lg-9.col-sm-offset-3
          = bootstrap_flash
          = yield
    %footer
      %hr
      %p.text-center &copy; 108km.com 2014
