#body{
  padding-top: 170px;
  background: url(<%= asset_path("background.png") %>) repeat;
}

.control-description{
  font-style: italic;
}

.control-label{
  font-size: 16px
}


.main-content{
  margin-top: 100px;
}

.sidebar{
  position: fixed;
  top: 45px;
  bottom: 0;
  left: 0;
  z-index: 1000;
  display: block;
  padding: 20px;
  overflow-x: hidden;
  overflow-y: auto; /* Scrollable contents if viewport is shorter than content. */
  background-color: #f5f5f5;
  border-right: 1px solid #eee;
}
